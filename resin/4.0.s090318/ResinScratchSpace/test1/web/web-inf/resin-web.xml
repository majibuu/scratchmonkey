<web-app xmlns="http://caucho.com/ns/resin" 
		 xmlns:jms="urn:java:com.caucho.jms" 
		 xmlns:ejb="urn:java:com.caucho.ejb">

  <ejb-stateless-bean class="resinscratchspace.biz.SecurityManagerImpl"/>

  <database jndi-name="jdbc/test">
  	
  	<ping>true</ping>
    <ping-interval>0</ping-interval>
    <ping-query>select 1;</ping-query>
    
    <driver type="org.postgresql.Driver">
      <url>jdbc:postgresql://localhost/test</url>
      <user>test</user>
      <password>test</password>
    </driver>
  
  </database>
  
  <ejb-server data-source="jdbc/test" 
  			  validate-database-schema="true"
  			  create-database-schema="true"/>
  
  <jms:JmsConnectionFactory/>

  <jms:MemoryQueue>
    <Named>userUpdater</Named>
  </jms:MemoryQueue>


  <ejb-message-bean class="resinscratchspace.queues.UserUpdateListener">
    <destination>#{userUpdater}</destination>
  </ejb-message-bean>
</web-app>